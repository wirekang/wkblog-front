{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx":"react",
        "strict": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": "./src",
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/**/*",
        "./dist/"
    ]
}